{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "keyofStringsOnly": true,
        "removeComments": true,
        "strictNullChecks": true,
        "watch": true,
        "lib": [
            "es6",
            "es7",
            "dom",
            "es2017"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*testUtils.ts",
        "**/*testUtils.tsx",
        "src/setupTests.ts"
    ]
}